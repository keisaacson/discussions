<h2>Current Discussions</h2>
<ul class="discussions_list">
	<% if @discussions.length == 0 %>
		<p class="empty-discussions">There are no discussions at this time.</p>
	<% else %>
		<% @discussions.each do |d| %>
			<li><%= link_to "#{d.title}", discussion_path(d.id) %></li>
		<% end %>
	<% end %>
</ul>

<%= form_tag("/discussions", method: :post, role: "form") do -%>
	<div class="form-group">
		<label for="title">Discussion Title </label>
		<input type="text" id="title" name="discussion[title]" class="form-control">
	</div>
	<div class="form-group">
		<label for="email">Leader Email </label>
		<input type="text" id="email" name="discussion[leader_email]" class="form-control">
	</div>
	<input type="submit" value="Create Discussion" class="btn btn-xs">
<% end -%>

<script>
	var channel = dispatcher.subscribe('new_discussion');
	channel.bind('update_discussions_index', function(data) {
	  $('p.empty-discussions').remove();
	  $('.discussions_list').append('<li><a href="/discussions/'+data['id']+'">'+data['title']+'</a></li>');
	});
</script>